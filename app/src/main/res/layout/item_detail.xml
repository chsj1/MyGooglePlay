<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <!--应用下载的容器-->
    <FrameLayout
        android:id="@+id/item_detail_download_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/detail_bottom_bg"></FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/item_detail_download_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--应用信息的容器-->
            <FrameLayout
                android:id="@+id/item_detail_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></FrameLayout>
            <!--应用安全的容器-->
            <FrameLayout
                android:background="#fff"
                android:layout_marginTop="5dp"
                android:id="@+id/item_detail_safe_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></FrameLayout>
            <!--应用截图的容器-->
            <FrameLayout
                android:id="@+id/item_detail_pic_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></FrameLayout>
            <!--应用描述的容器-->
            <FrameLayout
                android:id="@+id/item_detail_des_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></FrameLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>